   "source": [
    "n, k = map(int, input().split())\n",
    "count = 0\n",
    "\n",
    "# n이 k이상이면 1빼기와 k로 계속 나누기 반복\n",
    "while n >= k :\n",
    "    # n이 k로 나누어 떨어지지 않는다면 n에서 1씩 빼기\n",
    "    while n%k :\n",
    "        n -= 1\n",
    "        count += 1\n",
    "    \n",
    "    n //= k \n",
    "    count += 1\n",
    "\n",
    "# count += n-1\n",
    "while n > 1 :\n",
    "    n -= 1\n",
    "    count += 1\n",
    "\n",
    "\n",
    "print(count)"
   ]
  }
